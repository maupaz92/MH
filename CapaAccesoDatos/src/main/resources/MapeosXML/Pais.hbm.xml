<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="modelos.recursos">
 <class name="PaisModelo" table="Pais">
      <meta attribute="class-description">
         Esta clase contiene los metadatos necesarios para mapear a la base de 
         datos la clase PaisModelo.
      </meta>
      <id name="id_Pais" type="int" column="Id_Pais" >
      	<generator class="identity"></generator>
      </id>
      <property name="nombre" type="string" column="Nombre_Pais" unique="true" not-null="true"></property>      
   </class>
        
</hibernate-mapping>