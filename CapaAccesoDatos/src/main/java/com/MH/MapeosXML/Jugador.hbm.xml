<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
     
<hibernate-mapping package="modelos.recursos">
    <class name="JugadorModelo" table="Jugador" >
        <id name="pasaporte" type="int">
            <column name="Pasaporte_XFIFA" />   
            <generator class= "increment" />         
        </id>
        <property name="nombre" type="string"><column name="Nombre_Jugador"/></property>
        <property name="posicion" type="string"><column name="Posicion_Jugador" /></property>
        <property name="estado" type="boolean"><column name="Estado_Jugador" /></property>
        <property name="equipoActual" type="int"><column name="Equipo_Actual" /></property>
        <property name="altura" type="double"><column name="Altura_Jugador" /></property>
        <property name="peso" type="double"><column name="Peso_Jugador" /></property>
        <property name="fechaNacimiento" type="string"><column name="Fecha_Nacimiento" /></property>
        
    </class>
     
</hibernate-mapping>