<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
     
<hibernate-mapping package="modelos.recursos">
    <class name="JugadorModelo" table="Jugador" >
        <id name="pasaporte" type="string">
            <column name="Pasaporte_XFIFA" />            
        </id>
        <property name="nombre" type="string"><column name="Nombre_Jugador"/></property>
        <property name="posicion" type="string"><column name="Posicion_Jugador" /></property>
        <property name="estado" type="boolean"><column name="Estado_Jugador" /></property>
        <property name="posicion" type="string"><column name="Posicion_Jugador" /></property>
        <property name="altura" type="float"><column name="Altura_Jugador" /></property>
        <property name="peso" type="float"><column name="Peso_Jugador" /></property>
        <property name="fechaNacimiento" type="string"><column name="Fecha_Nacimiento" /></property>
        
        <set name="estadisticasRegulares" table="Estadisticas_Regulares" fetch="select">
            <key>
                <column name="Pasaporte_XFIFA" not-null="true"></column>
            </key>
            <one-to-many class="EstadisticasJugadorRegulares"/>
        </set>
        
        <set name="estadisticasSeleccion" table="Estadisticas_Seleccion" fetch="select">
            <key>
                <column name="Pasaporte_XFIFA" not-null="true"></column>
            </key>
            <one-to-many class="EstadisticasJugadorSeleccion"/>
        </set>
    </class>
     
</hibernate-mapping>