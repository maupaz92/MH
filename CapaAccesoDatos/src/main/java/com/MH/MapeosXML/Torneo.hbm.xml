<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="modelos.recursos">
 <class name="TorneoModelo" table="TORNEOS">
      <meta attribute="class-description">
         Esta clase contiene los metadatos necesarios para mapear a la base de 
         datos los objetos Torneo.
      </meta>
      <id name="nombre" type="string" column="Nombre_Torneo"></id>
      <property name="tipo" column="Tipo_Torneo" type="string"/>
      <property name="sede" column="Sede_Torneo" type="string"/>
      <property name="copa" column="Copa" type="boolean"/>
   </class>
    
</hibernate-mapping>