<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="com.MH.XMLMapeos">
 <class name="Equipo" table="Equipo">
      <meta attribute="class-description">
         Esta clase contiene los metadatos necesarios para mapear a la base de 
         datos los objetos Equipo.
      </meta>
      <id name="id_Equipo" type="int" column="Id_Equipo">
         <generator class="native"/>
      </id>
      <property name="nombre" column="Nombre_Equipo" type="string"/>
      <property name="tipo" column="Tipo_Equipo" type="boolean"/>
   	  <many-to-one name="pais" class="modelos.recursos.PaisModelo" 
   	  column="Id_Pais" cascade="all" not-null="true"/>
   
   </class>
    
</hibernate-mapping>